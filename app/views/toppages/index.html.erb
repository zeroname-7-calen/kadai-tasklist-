<% if logged_in? %>
   <div class="text-center">
    <p>ログイン完了ユーザ: <%= current_user.name %></p>
    
    <h1>Welcome to Tasklist</h1>
    <%= link_to "tasklist", tasks_path, class: "btn btn-lg btn-primary" %>
   </div>
  
  <!--ここからtasks/index.html.erbの記述を移植-->
  <% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
        </tr>
     </thead>
    <tbody>
　　　　　<% @tasks.each do |task|%>
            <tr>
                <td><%= link_to task.id, task %></td>
                <td><%= task.status %></td>
                <td><%= task.content %></td>
            </tr>
          <% end %>
    </tbody>
 </table>
 <div>
  <%= paginate @tasks %>
 </div>

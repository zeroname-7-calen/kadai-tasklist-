 <!--tasks/index.html.erbの記述を移植ここまで-->
  
<% else %>
  <div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to Tasklist</h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>
<% end %>
